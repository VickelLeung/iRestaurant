<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluegradient"
    tools:context="com.example.vicke.irestaurant.ForgotActivity">


    <Button
        android:id="@+id/btnRetrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp"
        android:text="Retrieve password" />

    <TextView
        android:id="@+id/tvForgotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etForgotEmail"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp"
        android:text="@string/forgotTitle"
        android:textColor="#ffff"
        android:textSize="22dp"
        android:padding="5dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etForgotEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_email"
        android:hint="Email address"
        android:textColorHint="#ffff"
        android:textColor="#ffff"
        android:inputType="textPersonName" />
</RelativeLayout>
